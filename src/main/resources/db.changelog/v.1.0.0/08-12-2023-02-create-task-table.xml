<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="08-12-2023-02-create-task-table" author="vlad">
        <createTable tableName="task">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="assignee_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="08-12-2023-02_1-create-task-table" author="vlad">
        <addForeignKeyConstraint baseTableName="task" baseColumnNames="author_id" constraintName="fk_task_author" referencedTableName="_user"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="08-12-2023-02_2-create-task-table" author="vlad">
        <addForeignKeyConstraint baseTableName="task" baseColumnNames="assignee_id" constraintName="fk_task_assignee" referencedTableName="_user"
                                 referencedColumnNames="id" onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>